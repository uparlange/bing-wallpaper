{
  "name": "bing-wallpaper",
  "version": "1.0.6",
  "description": "BingWallpaper",
  "main": "src/main/electron-main.js",
  "author": "Ugo Parlange",
  "license": "ISC",
  "build": {
    "productName": "BingWallpaper",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "appId": "fr.lapli.bing-wallpaper",
    "files": [
      "!resources"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^15.0.0-beta.4",
    "electron-builder": "^22.14.2"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "dayjs": "^1.10.7",
    "download": "^8.0.0",
    "htmlparser2": "^7.1.1",
    "i18next": "^20.6.1",
    "i18next-electron-language-detector": "^0.0.10",
    "i18next-fs-backend": "^1.1.1",
    "image-to-base64": "^2.2.0",
    "log4js": "^6.3.0",
    "node-fetch": "^2.6.2",
    "vue": "^3.2.11",
    "vue-router": "^4.0.11",
    "wallpaper": "^5.0.1"
  }
}
